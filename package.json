{
  "name": "openstygian",
  "author": "Camilo Ram√≠rez",
  "version": "0.0.1",
  "description": "HTML5 Game Engine written in Typescript for creating Games Like Ultima Underworld",
  "main": "index.js",
  "scripts": {
    "build": "node ./scripts/build.js",
    "watch": "node ./scripts/watch.js",
    "build-debug": "node ./scripts/build.js debug",
    "watch-debug": "node ./scripts/watch.js debug",
    "lint": "eslint ./src/*.ts",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "dependencies": {
    "browserify": "^17.0.0",
    "errorify": "^0.3.1",
    "tsify": "^5.0.4",
    "typescript": "^4.6.3",
    "watchify": "^4.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "chai": "^4.3.6",
    "eslint": "^8.12.0",
    "husky": "^4.3.8",
    "mocha": "^9.2.2",
    "ts-node": "^10.7.0"
  }
}
